{
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(ls:*)",
      "Bash(rm:*)",
      "Bash(find:*)",
      "Bash(for role in roles/*/)",
      "Bash(do echo \"=== $role ===\")",
      "Bash(if [ -d \"$role/tasks\" ])",
      "Bash(then grep -h \"src:\" \"$role/tasks/\"*.yml)",
      "Bash(fi)",
      "Bash(done)",
      "Bash(for template in \"backup.service.j2\" \"backup.sh.j2\" \"backup.timer.j2\" \"check_netdata_health.sh.j2\" \"configure-uptime-kuma-monitors.sh.j2\" \"docker-compose.monitoring.yml.j2\" \"docker-compose.netdata.yml.j2\" \"jail.local.j2\" \"lynis.service.j2\" \"lynis_audit.sh.j2\" \"nas_credentials.j2\" \"restic_env.j2\" \"sshd_config_hardening.j2\" \"uptime_kuma_setup.md.j2\" \"uptime-kuma-setup-guide.md.j2\")",
      "Bash(do if ! find . -name \"$template\" -type f)",
      "Bash(then echo \"MISSING: $template\")",
      "Bash(ansible-playbook:*)",
      "Bash(git update-index:*)",
      "Bash(mkdir:*)"
    ]
  }
}
