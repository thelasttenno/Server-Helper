# SSH Hardening Configuration
# Managed by Ansible - Server Helper

# Listen port
Port {{ security_ssh_port }}

# Authentication
PermitRootLogin {{ security_ssh_permit_root_login }}
PubkeyAuthentication {{ security_ssh_pubkey_auth }}
PasswordAuthentication {{ security_ssh_password_auth }}
PermitEmptyPasswords no
MaxAuthTries {{ security_ssh_max_auth_tries }}

# Security
X11Forwarding {{ security_ssh_x11_forwarding }}
AllowAgentForwarding {{ security_ssh_allow_agent_forwarding }}
AllowTcpForwarding {{ security_ssh_tcp_forwarding }}
StrictModes yes

# Logging
LogLevel VERBOSE
SyslogFacility AUTH

# Timeouts
LoginGraceTime 60
ClientAliveInterval 300
ClientAliveCountMax 2

# Ciphers and MACs (modern secure defaults)
KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com
MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com
