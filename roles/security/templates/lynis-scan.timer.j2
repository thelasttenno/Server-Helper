[Unit]
Description=Weekly Lynis Security Audit Timer
Documentation=https://cisofy.com/lynis/

[Timer]
# Run weekly on Sunday at 3 AM (or as configured)
OnCalendar={{ security_lynis_schedule | regex_replace('^([0-9]+) ([0-9]+) \\* \\* ([0-9]+)$', '*-*-* \\2:\\1:00') }}
Persistent=true
RandomizedDelaySec=3600

[Install]
WantedBy=timers.target
