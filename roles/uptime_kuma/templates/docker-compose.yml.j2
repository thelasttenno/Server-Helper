# Uptime Kuma - Status monitoring
# Managed by Ansible - Server Helper
# Dockge compatible: /opt/stacks/uptime-kuma/

services:
  uptime-kuma:
    image: {{ uptime_kuma_image }}:{{ uptime_kuma_image_tag }}
    container_name: {{ uptime_kuma_container_name }}
    restart: unless-stopped
    ports:
      - "{{ uptime_kuma_port }}:3001"
    volumes:
      - ./data:/app/data
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      - TZ={{ target_timezone | default('America/Vancouver') }}
    deploy:
      resources:
        limits:
          memory: {{ uptime_kuma_memory_limit }}
          cpus: "{{ uptime_kuma_cpu_limit }}"
    healthcheck:
      test: ["CMD-SHELL", "node /app/extra/healthcheck.js"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    labels:
      - "com.centurylinklabs.watchtower.enable=true"
      - "traefik.enable=true"
      - "traefik.http.routers.uptime-kuma.rule=Host(`status.{{ target_domain | default('local') }}`)"
      - "traefik.http.routers.uptime-kuma.entrypoints=websecure"
      - "traefik.http.routers.uptime-kuma.tls=true"
      - "traefik.http.services.uptime-kuma.loadbalancer.server.port=3001"
