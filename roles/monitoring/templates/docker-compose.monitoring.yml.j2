version: '3.8'

services:
{% if monitoring.netdata.enabled | default(true) %}
  netdata:
    image: netdata/netdata:{{ monitoring.netdata.version }}
    container_name: netdata
    hostname: {{ server_hostname | default(ansible_hostname) }}
    restart: unless-stopped
    ports:
      - "{{ monitoring.netdata.port }}:19999"
    cap_add:
      - SYS_PTRACE
      - SYS_ADMIN
    security_opt:
      - apparmor:unconfined
    volumes:
      - netdata_config:/etc/netdata
      - netdata_lib:/var/lib/netdata
      - netdata_cache:/var/cache/netdata
      - /etc/passwd:/host/etc/passwd:ro
      - /etc/group:/host/etc/group:ro
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      - DOCKER_HOST=/var/run/docker.sock
    networks:
      - server-helper
{% endif %}

{% if monitoring.uptime_kuma.enabled | default(true) %}
  uptime-kuma:
    image: louislam/uptime-kuma:{{ monitoring.uptime_kuma.version }}
    container_name: uptime-kuma
    restart: unless-stopped
    ports:
      - "{{ monitoring.uptime_kuma.port }}:3001"
    volumes:
      - uptime_kuma_data:/app/data
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      - server-helper
{% endif %}

volumes:
{% if monitoring.netdata.enabled | default(true) %}
  netdata_config:
  netdata_lib:
  netdata_cache:
{% endif %}
{% if monitoring.uptime_kuma.enabled | default(true) %}
  uptime_kuma_data:
{% endif %}

networks:
  server-helper:
    external: true
