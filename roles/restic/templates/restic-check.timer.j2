[Unit]
Description=Restic Repository Check Timer
Documentation=https://restic.readthedocs.io/

[Timer]
# Weekly check: {{ restic_check_schedule }}
OnCalendar={{ restic_check_schedule | regex_replace('^([0-9]+) ([0-9]+) \\* \\* ([0-9]+)$', '*-*-* \\2:\\1:00') }}
Persistent=true
RandomizedDelaySec=3600

[Install]
WantedBy=timers.target
