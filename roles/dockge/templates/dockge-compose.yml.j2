# Dockge Docker Compose Template
# Container stack manager

version: '3.8'

services:
  dockge:
    image: louislam/dockge:1
    container_name: dockge
    restart: unless-stopped
    ports:
      - "{{ dockge.port }}:5001"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - {{ dockge.data_dir }}:/app/data
      - {{ dockge.stacks_dir }}:/opt/stacks
    environment:
      - DOCKGE_STACKS_DIR=/opt/stacks
    networks:
      - monitoring

networks:
  monitoring:
    external: true
    name: monitoring
