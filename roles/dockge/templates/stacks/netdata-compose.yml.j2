# Netdata Stack - System Monitoring
# Deployed via Dockge

version: '3.8'

services:
  netdata:
    image: netdata/netdata:latest
    container_name: netdata
    hostname: {{ hostname | default(ansible_hostname) }}
    restart: unless-stopped
    ports:
      - "{{ netdata.port }}:19999"
    cap_add:
      - SYS_PTRACE
      - SYS_ADMIN
    security_opt:
      - apparmor:unconfined
    volumes:
      - netdataconfig:/etc/netdata
      - netdatalib:/var/lib/netdata
      - netdatacache:/var/cache/netdata
      - /etc/passwd:/host/etc/passwd:ro
      - /etc/group:/host/etc/group:ro
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /etc/os-release:/host/etc/os-release:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      - DOCKER_HOST=/var/run/docker.sock
{% if netdata.claim_token %}
      - NETDATA_CLAIM_TOKEN={{ netdata.claim_token }}
{% if netdata.claim_rooms %}
      - NETDATA_CLAIM_ROOMS={{ netdata.claim_rooms }}
{% endif %}
      - NETDATA_CLAIM_URL=https://app.netdata.cloud
{% endif %}
    networks:
      - monitoring

volumes:
  netdataconfig:
  netdatalib:
  netdatacache:

networks:
  monitoring:
    external: true
    name: monitoring
