# Traefik dynamic configuration â€” security headers middleware

http:
  middlewares:
    security-headers:
      headers:
        browserXssFilter: {{ control_traefik.security_headers.browser_xss_filter | lower }}
        contentTypeNosniff: {{ control_traefik.security_headers.content_type_nosniff | lower }}
        frameDeny: {{ control_traefik.security_headers.frame_deny | lower }}
        sslRedirect: {{ control_traefik.security_headers.ssl_redirect | lower }}
        stsSeconds: {{ control_traefik.security_headers.sts_seconds }}
        stsIncludeSubdomains: {{ control_traefik.security_headers.sts_include_subdomains | lower }}
        stsPreload: {{ control_traefik.security_headers.sts_preload | lower }}
        customFrameOptionsValue: "SAMEORIGIN"
        referrerPolicy: "strict-origin-when-cross-origin"
        permissionsPolicy: "camera=(), microphone=(), geolocation=()"
