# {{ ansible_managed }}
# Traefik v3 static configuration

api:
  dashboard: true
  insecure: true

ping: {}

log:
  level: {{ control_traefik.log_level }}

accessLog:
  filePath: /var/log/traefik/access.log
  format: json
  filters:
    statusCodes:
      - "200-599"
  bufferingSize: 100

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: traefik-public
  file:
    filename: /dynamic-config.yml
    watch: true

certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ control_traefik.acme_email }}
      storage: /acme/acme.json
      dnsChallenge:
        provider: {{ control_traefik.acme_dns_provider }}
        resolvers:
          - "1.1.1.1:53"
          - "8.8.8.8:53"
