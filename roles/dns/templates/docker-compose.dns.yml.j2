---
# Pi-hole + Unbound DNS Stack
# Managed by Ansible - DO NOT EDIT MANUALLY

services:
  # Unbound - Recursive DNS resolver for privacy
  unbound:
    container_name: unbound
    image: mvance/unbound:{{ dns.unbound.version | default('latest') }}
    restart: unless-stopped
    networks:
      - dns
    ports:
      - "5335:53/tcp"
      - "5335:53/udp"
    volumes:
      - {{ dns.stack_dir }}/unbound/etc-unbound:/opt/unbound/etc/unbound
    environment:
      - TZ={{ timezone | default('UTC') }}
    healthcheck:
      test: ["CMD", "drill", "@127.0.0.1", "cloudflare.com"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    labels:
      - "com.centurylinklabs.watchtower.enable={{ watchtower.enabled | default(false) | string | lower }}"

  # Pi-hole - Network-wide ad blocking + local DNS
  pihole:
    container_name: pihole
    image: pihole/pihole:{{ dns.pihole.version | default('latest') }}
    restart: unless-stopped
    depends_on:
      unbound:
        condition: service_healthy
    networks:
      - dns
{% if dns.connect_to_monitoring | default(true) %}
      - monitoring
{% endif %}
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "{{ dns.pihole.port | default(80) }}:80/tcp"
{% if dns.pihole.https_port | default(false) %}
      - "{{ dns.pihole.https_port }}:443/tcp"
{% endif %}
    volumes:
      - {{ dns.stack_dir }}/pihole/etc-pihole:/etc/pihole
      - {{ dns.stack_dir }}/pihole/etc-dnsmasq.d:/etc/dnsmasq.d
      - {{ dns.stack_dir }}/pihole/custom.list:/etc/pihole/custom.list:ro
    environment:
      - TZ={{ timezone | default('UTC') }}
      - WEBPASSWORD={{ vault_dns.pihole_password }}
      - PIHOLE_DNS_=unbound#53
      - DNSSEC=false  # Handled by Unbound
      - DNS_BOGUS_PRIV=true
      - DNS_FQDN_REQUIRED=true
      - REV_SERVER={{ dns.pihole.rev_server | default(true) | string | lower }}
{% if dns.pihole.rev_server | default(true) %}
      - REV_SERVER_CIDR={{ dns.pihole.rev_server_cidr | default(ansible_default_ipv4.network + '/' + ansible_default_ipv4.netmask) }}
      - REV_SERVER_TARGET={{ dns.pihole.rev_server_target | default(ansible_default_ipv4.gateway) }}
      - REV_SERVER_DOMAIN={{ dns.pihole.rev_server_domain | default('local') }}
{% endif %}
      - WEBTHEME={{ dns.pihole.theme | default('default-dark') }}
      - TEMPERATUREUNIT={{ dns.pihole.temp_unit | default('c') }}
      - QUERY_LOGGING={{ dns.pihole.query_logging | default(true) | string | lower }}
{% if dns.pihole.virtual_host | default(false) %}
      - VIRTUAL_HOST={{ dns.pihole.virtual_host }}
{% endif %}
    healthcheck:
      test: ["CMD", "dig", "+short", "@127.0.0.1", "google.com"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    labels:
      - "com.centurylinklabs.watchtower.enable={{ watchtower.enabled | default(false) | string | lower }}"
{% if dns.pihole.traefik_enabled | default(false) %}
      - "traefik.enable=true"
      - "traefik.http.routers.pihole.rule=Host(`pihole.{{ reverse_proxy.domain }}`)"
      - "traefik.http.routers.pihole.entrypoints=websecure"
      - "traefik.http.routers.pihole.tls.certresolver=letsencrypt"
      - "traefik.http.services.pihole.loadbalancer.server.port=80"
{% endif %}

networks:
  dns:
    name: {{ dns.network_name | default('dns') }}
    external: true
{% if dns.connect_to_monitoring | default(true) %}
  monitoring:
    name: monitoring
    external: true
{% endif %}
