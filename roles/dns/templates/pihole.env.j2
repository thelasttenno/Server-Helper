# Pi-hole Environment Configuration
# Managed by Ansible - DO NOT EDIT MANUALLY

TZ={{ timezone | default('UTC') }}
WEBPASSWORD={{ vault_dns.pihole_password }}
PIHOLE_DNS_=unbound#53
DNSSEC=false
DNS_BOGUS_PRIV=true
DNS_FQDN_REQUIRED=true
REV_SERVER={{ dns.pihole.rev_server | default(true) | string | lower }}
{% if dns.pihole.rev_server | default(true) %}
REV_SERVER_CIDR={{ dns.pihole.rev_server_cidr | default(ansible_default_ipv4.network + '/' + ansible_default_ipv4.netmask) }}
REV_SERVER_TARGET={{ dns.pihole.rev_server_target | default(ansible_default_ipv4.gateway) }}
REV_SERVER_DOMAIN={{ dns.pihole.rev_server_domain | default('local') }}
{% endif %}
WEBTHEME={{ dns.pihole.theme | default('default-dark') }}
TEMPERATUREUNIT={{ dns.pihole.temp_unit | default('c') }}
QUERY_LOGGING={{ dns.pihole.query_logging | default(true) | string | lower }}
