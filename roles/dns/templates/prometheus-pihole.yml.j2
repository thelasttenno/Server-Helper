# Prometheus Scrape Config for Pi-hole
# Add this to your Prometheus configuration
# Managed by Ansible - DO NOT EDIT MANUALLY

scrape_configs:
  - job_name: 'pihole'
    static_configs:
      - targets: ['pihole-exporter:9617']
        labels:
          instance: '{{ hostname }}'
          service: 'pihole'
          environment: '{{ environment | default("production") }}'
    scrape_interval: 30s
    scrape_timeout: 10s
