# {{ ansible_managed }}
# Netdata configuration â€” {{ netdata_mode }} mode

[global]
    hostname = {{ inventory_hostname }}
    history = {{ control_netdata.history_seconds if netdata_mode == 'parent' else 3600 }}
{% if netdata_mode == 'parent' %}
    memory mode = dbengine
    page cache size = 64
    dbengine multihost disk space = {{ control_netdata.dbengine_multihost_disk_space }}
{% else %}
    memory mode = ram
{% endif %}

[web]
    bind to = *
    allow connections from = *
