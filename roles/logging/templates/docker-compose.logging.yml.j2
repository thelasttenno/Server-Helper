# Logging & Visualization Stack - Loki + Promtail + Grafana
# Deployed via Dockge
#
{% if target_promtail.send_to_central | default(false) and control_node_ip | default('') | length > 0 %}
# MODE: Centralized - Promtail sends logs to central Loki at {{ control_node_ip }}:{{ control_loki.port | default(3100) }}
# Local Loki and Grafana can be disabled since logs go to the control node
{% else %}
# MODE: Local - Full logging stack running on this host
{% endif %}

version: '3.8'

services:
{% if logging.loki.enabled | default(true) %}
  loki:
    image: grafana/loki:{{ logging.loki.version | default('latest') }}
    container_name: loki
    hostname: loki
    restart: unless-stopped
    ports:
      - "{{ logging.loki.port | default('3100') }}:3100"
    volumes:
      - loki_data:/loki
      - ./loki-config.yml:/etc/loki/local-config.yaml:ro
    command: -config.file=/etc/loki/local-config.yaml
    networks:
      - monitoring
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:3100/ready"]
      interval: 30s
      timeout: 10s
      retries: 3
{% endif %}

{% if logging.promtail.enabled | default(true) %}
  promtail:
    image: grafana/promtail:{{ logging.promtail.version | default('latest') }}
    container_name: promtail
    hostname: {{ hostname | default(ansible_hostname) }}-promtail
    restart: unless-stopped
    volumes:
      - /var/log:/var/log:ro
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - ./promtail-config.yml:/etc/promtail/config.yml:ro
    command: -config.file=/etc/promtail/config.yml
    networks:
      - monitoring
{% if logging.loki.enabled | default(true) %}
    depends_on:
      - loki
{% endif %}
{% endif %}

{% if logging.grafana.enabled | default(true) %}
  grafana:
    image: grafana/grafana:{{ logging.grafana.version | default('latest') }}
    container_name: grafana
    hostname: grafana
    restart: unless-stopped
    ports:
      - "{{ logging.grafana.port | default('3000') }}:3000"
    volumes:
      - grafana_data:/var/lib/grafana
      - ./grafana-provisioning:/etc/grafana/provisioning:ro
    environment:
      - GF_SECURITY_ADMIN_USER={{ logging.grafana.admin_user | default('admin') }}
      - GF_SECURITY_ADMIN_PASSWORD={{ vault_grafana_admin_password | default('admin') }}
      - GF_SERVER_ROOT_URL=http://{{ ansible_default_ipv4.address | default('localhost') }}:{{ logging.grafana.port | default('3000') }}
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_INSTALL_PLUGINS={{ logging.grafana.plugins | default('') }}
{% if logging.grafana.smtp.enabled | default(false) %}
      - GF_SMTP_ENABLED=true
      - GF_SMTP_HOST={{ logging.grafana.smtp.host }}:{{ logging.grafana.smtp.port | default('587') }}
      - GF_SMTP_USER={{ logging.grafana.smtp.user }}
      - GF_SMTP_PASSWORD={{ vault_grafana_smtp_password }}
      - GF_SMTP_FROM_ADDRESS={{ logging.grafana.smtp.from_address }}
      - GF_SMTP_FROM_NAME={{ logging.grafana.smtp.from_name | default('Grafana') }}
{% endif %}
    networks:
      - monitoring
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:3000/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
{% endif %}

volumes:
{% if logging.loki.enabled | default(true) %}
  loki_data:
    driver: local
{% endif %}
{% if logging.grafana.enabled | default(true) %}
  grafana_data:
    driver: local
{% endif %}

networks:
  monitoring:
    external: true
    name: monitoring
