# Authentik Environment Variables
# Managed by Ansible - Server Helper
# WARNING: Contains sensitive credentials

# Secret key for signing
AUTHENTIK_SECRET_KEY={{ authentik_secret_key }}

# PostgreSQL
AUTHENTIK_POSTGRES_DB={{ authentik_postgres_db }}
AUTHENTIK_POSTGRES_USER={{ authentik_postgres_user }}
AUTHENTIK_POSTGRES_PASSWORD={{ authentik_postgres_password }}

# Bootstrap credentials
AUTHENTIK_BOOTSTRAP_EMAIL={{ authentik_bootstrap_email }}
AUTHENTIK_BOOTSTRAP_PASSWORD={{ authentik_bootstrap_password }}
{% if authentik_bootstrap_token %}
AUTHENTIK_BOOTSTRAP_TOKEN={{ authentik_bootstrap_token }}
{% endif %}

{% if authentik_email_enabled %}
# Email settings
AUTHENTIK_EMAIL_HOST={{ authentik_email_host }}
AUTHENTIK_EMAIL_PORT={{ authentik_email_port }}
AUTHENTIK_EMAIL_USERNAME={{ authentik_email_username }}
AUTHENTIK_EMAIL_PASSWORD={{ authentik_email_password }}
AUTHENTIK_EMAIL_FROM={{ authentik_email_from }}
{% endif %}

{% if authentik_geoip_enabled %}
# GeoIP
GEOIPUPDATE_ACCOUNT_ID={{ authentik_geoip_account_id }}
GEOIPUPDATE_LICENSE_KEY={{ authentik_geoip_license_key }}
{% endif %}
