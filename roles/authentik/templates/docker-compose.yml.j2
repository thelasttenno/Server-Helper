# {{ ansible_managed }}
services:
  authentik-server:
    image: ghcr.io/goauthentik/server:{{ control_authentik.version }}
    container_name: authentik-server
    restart: unless-stopped
    command: server
    env_file:
      - .env
    ports:
      - "{{ control_authentik.port }}:9000"
    volumes:
      - authentik-media:/media
      - authentik-templates:/templates
    networks:
      - traefik-public
      - authentik-internal
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.authentik.rule=Host(`auth.{{ target_domain }}`)"
      - "traefik.http.routers.authentik.entrypoints=websecure"
      - "traefik.http.routers.authentik.tls.certresolver=letsencrypt"
      - "traefik.http.services.authentik.loadbalancer.server.port=9000"
    depends_on:
      authentik-db:
        condition: service_healthy
      authentik-redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:9000/-/health/live/"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s

  authentik-worker:
    image: ghcr.io/goauthentik/server:{{ control_authentik.version }}
    container_name: authentik-worker
    restart: unless-stopped
    command: worker
    env_file:
      - .env
    volumes:
      - authentik-media:/media
      - authentik-templates:/templates
    networks:
      - authentik-internal
    depends_on:
      authentik-db:
        condition: service_healthy
      authentik-redis:
        condition: service_healthy

  authentik-db:
    image: postgres:{{ control_authentik.postgres_version }}
    container_name: authentik-db
    restart: unless-stopped
    environment:
      POSTGRES_DB: authentik
      POSTGRES_USER: authentik
      POSTGRES_PASSWORD: "{{ vault_authentik_credentials.postgres_password }}"
    volumes:
      - authentik-db:/var/lib/postgresql/data
    networks:
      - authentik-internal
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U authentik"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s

  authentik-redis:
    image: redis:{{ control_authentik.redis_version }}
    container_name: authentik-redis
    restart: unless-stopped
    command: >
      redis-server --requirepass {{ vault_authentik_credentials.redis_password }}
    volumes:
      - authentik-redis:/data
    networks:
      - authentik-internal
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "{{ vault_authentik_credentials.redis_password }}", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

volumes:
  authentik-db:
  authentik-redis:
  authentik-media:
  authentik-templates:

networks:
  traefik-public:
    external: true
  authentik-internal:
